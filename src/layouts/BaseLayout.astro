---
// 修复：尝试使用解构导出的不同写法来绕过环境中的解析错误
import { SITE_CONFIG, t } from '../data/site-config';

interface Props {
    title?: string;
    description?: string;
    lang?: 'ja' | 'en';
}

const {
    lang = 'ja',
    title = SITE_CONFIG.brand.logo,
} = Astro.props;

// 动态获取描述
const configDescription = SITE_CONFIG.brand.description[lang] || "";
const description = Astro.props.description || configDescription;
const { colors } = SITE_CONFIG.theme;

// 处理路径，用于语言切换
const currentPath = Astro.url.pathname;
---

    <!doctype html>
<html lang={lang} class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/svg+xml" href={SITE_CONFIG.brand.favicon} />
<meta name="generator" content={Astro.generator} />

<title>{title}</title>
<meta name="description" content={description} />

<!-- 导入设计稿要求的字体 -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet">
    </head>
    <body class="min-h-screen flex flex-col font-sans selection:bg-[#89b4fa]/30 bg-[#1e1e2e] text-[#cdd6f4]">

<!-- 顶部导航 -->
<header class="fixed top-0 left-0 w-full z-50 bg-[#1e1e2e]/80 backdrop-blur-md border-b border-white/5">
<div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
<a href={lang === 'en' ? '/en' : '/'} class="font-mono text-xl font-bold text-[var(--accent)] flex items-center gap-3 group transition-opacity">
<div class="w-2.5 h-2.5 rounded-full bg-[#89b4fa] shadow-[0_0_15px_#89b4fa] group-hover:scale-125 transition-transform"></div>
    <span class="tracking-tight text-[#89b4fa]">{SITE_CONFIG.brand.logo}</span>
    </a>

    <div class="hidden md:flex items-center gap-8">
<nav class="flex gap-8 text-sm font-semibold text-[var(--subtext)]">
    {SITE_CONFIG.navigation.map((item) => (
            <a
                href={lang === 'en' ? `/en${item.href}`.replace(/\/$/, '') : item.href}
class={`transition-colors duration-300 ${item.color || 'hover:text-[var(--accent)]'}`}
>
{item.label[lang]}
</a>
))}
</nav>

<!-- 语言切换组件 -->
<div class="flex items-center bg-white/5 rounded-full p-1 border border-white/10">
<a
    href={lang === 'en' ? (currentPath.replace(/^\/en/, '') || '/') : currentPath}
class={`px-3 py-1 text-[10px] font-bold rounded-full transition-all ${lang === 'ja' ? 'bg-[var(--accent)] text-[#1e1e2e]' : 'text-[var(--subtext)] hover:text-white'}`}
>
JA
</a>
<a
href={lang === 'ja' ? (`/en${currentPath === '/' ? '' : currentPath}`) : currentPath}
class={`px-3 py-1 text-[10px] font-bold rounded-full transition-all ${lang === 'en' ? 'bg-[var(--accent)] text-[#1e1e2e]' : 'text-[var(--subtext)] hover:text-white'}`}
>
EN
</a>
</div>
</div>

<button class="md:hidden p-2 text-[var(--subtext)] hover:text-white transition-colors">
<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
<line x1="3" y1="12" x2="21" y2="12"></line>
    <line x1="3" y1="6" x2="21" y2="6"></line>
    <line x1="3" y1="18" x2="21" y2="18"></line>
    </svg>
    </button>
    </div>
    </header>

    <main class="flex-grow w-full max-w-6xl mx-auto px-6 pt-24 pb-20">
    <slot />
    </main>

    <footer class="mt-12 text-center text-xs text-gray-600 font-mono pb-12 flex flex-col items-center gap-4">
<div class="flex items-center gap-3 text-[10px] uppercase tracking-widest text-gray-500">
<a href={SITE_CONFIG.brand.webring.prev} class="hover:text-[var(--accent)] transition underline decoration-white/10 underline-offset-4">{t('prev', lang)}</a>
<span class="text-white/10">/</span>
    <a href={SITE_CONFIG.brand.webring.home} target="_blank" class="hover:text-white transition font-bold">{SITE_CONFIG.brand.webring.label}</a>
    <span class="text-white/10">/</span>
    <a href={SITE_CONFIG.brand.webring.next} class="hover:text-[var(--accent)] transition underline decoration-white/10 underline-offset-4">{t('next', lang)}</a>
</div>
<div class="text-[var(--subtext)] opacity-60">
    {SITE_CONFIG.brand.footer} • {t('builtWith', lang)}
</div>
</footer>

<style is:global define:vars={{
    'accent': colors.accent,
        'bg': colors.bg,
        'card': colors.card,
        'text': colors.text,
        'subtext': colors.subtext,
        'pink': colors.pink,
        'green': colors.green,
        'peach': colors.peach,
        'red': colors.red
}}>
:root {
    --bg: #1e1e2e;
    --card: #313244;
}

html, body {
    background-color: var(--bg);
    color: var(--text);
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    font-family: 'Noto Sans JP', sans-serif;
}

/* Bento Card 核心样式 */
.bento-card {
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    border: 1px solid rgba(255, 255, 255, 0.05);
    background-color: var(--card);
    box-shadow: 0 4px 20px -2px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
}

.bento-card:hover {
    transform: translateY(-4px);
    border-color: rgba(137, 180, 250, 0.3);
    box-shadow: 0 12px 30px -10px rgba(0, 0, 0, 0.4);
}

/* 滚动条优化 */
.scroller::-webkit-scrollbar { width: 4px; }
.scroller::-webkit-scrollbar-thumb { background: #45475a; border-radius: 10px; }

h1, h2, h3, h4, h5, h6 {
    color: #ffffff;
    line-height: 1.3;
}

/* 动画效果 */
@keyframes spin { to { transform: rotate(360deg); } }
.animate-spin-slow { animation: spin 3s linear infinite; }
</style>
</body>
</html>