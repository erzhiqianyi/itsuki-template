---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
    const photos = await getCollection('photos');
    // 排除掉 'tags' 这个关键词，防止与 tags 文件夹冲突
    return photos.filter(p => p.id !== 'tags').map(entry => ({
        params: { slug: entry.id },
        props: { entry },
    }));
}
const { entry } = Astro.props;
---
<BaseLayout title={entry.data.title}>
    <div class="max-w-4xl mx-auto px-6 py-20 text-center">
        <img src={entry.data.image} class="w-full rounded-[2.5rem] shadow-2xl mb-8" />
        <h1 class="text-3xl font-bold text-white">{entry.data.title}</h1>
        <p class="text-[var(--peach)] font-mono mt-4">{entry.data.location}</p>
    </div>
</BaseLayout>